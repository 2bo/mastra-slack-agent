# OpenAI API Key (Required for Agent)
OPENAI_API_KEY=sk-...

# Google Calendar OAuth 2.0 Credentials
# Get these from Google Cloud Console (APIs & Services > Credentials > OAuth 2.0 Client IDs)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Google Calendar Refresh Token
# Run `npx tsx src/scripts/get-google-token.ts` to generate this
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Optional: Calendar ID (defaults to 'primary')
GOOGLE_CALENDAR_ID=primary

# Optional: Timezone (defaults to 'Asia/Tokyo')
TIMEZONE=Asia/Tokyo

# Slack Bot Configuration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Slack Socket Mode (set to 'true' for development, 'false' for production HTTP mode)
SLACK_SOCKET_MODE=true

# Slack App Token (required only when SLACK_SOCKET_MODE=true)
# Starts with xapp-
SLACK_APP_TOKEN=xapp-your-app-token-here


# Slack App Token (required only when SLACK_SOCKET_MODE=true)
# Starts with xapp-
SLACK_APP_TOKEN=xapp-your-app-token-here

# Server Configuration
PORT=3000